{% block body %}
<div class="cart">
    <h1>Panier</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Evènement</th>
                <th>Type ticket</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item.event }}</td>
                    <td>{{ item.ticketType }}</td>
                    <td>{{ item.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.totalPrice }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="checkOut">
        <div class="total">{{ total }}</div>
        <div class="closeShopping"><a href="{{ path('cart_detail') }}" class="text-decoration-none">Voir panier</a></div>
</div>
<style>
    .cart{
        display: fixed;
        top: 0;
        margin-left: 1106px;
        width: 400px;
        background-color: #453E3B;
        height: 90vh;
        transition: 0.5s;
    }
    .cart h1{
        color: #E8BC0E;
        font-weight: 100;
        margin: 0;
        padding: 0 20px;
        height: 80px;
        display: flex;
        align-items: center;
    }
    .cart .checkOut{
        position: absolute;
        bottom: 0;
        width: 400px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    .cart .checkOut div{
        background-color: #E8BC0E;
        width: 100%;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        cursor: pointer;
    }
    .cart .checkOut div:nth-child(2){
        background-color: #1C1F25;
        color: #FFF;
    }
</style>
{% endblock %}
